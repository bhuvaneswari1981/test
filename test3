- name: deployARSParser | Find old 275generation JARs
  find:
    paths: "{{ ars_parser_run_dir }}"
    patterns: "275generation*.jar"
  register: old_jars_to_remove

- name: deployARSParser | Remove old 275generation JARs
  file:
    path: "{{ item.path }}"
    state: absent
  loop: "{{ old_jars_to_remove.files }}"
  when: old_jars_to_remove.matched > 0
  tags: cleanup_old_jars
